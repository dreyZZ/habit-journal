<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HabitJournal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/status_bar_color</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Text Colors -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textAppearanceLargePopupMenu">@color/main_background</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="windowActionBar">false</item>

        <item name="android:textViewStyle">@style/MainTextViewStyle</item>
        <item name="android:editTextStyle">@style/MainTextViewStyle</item>
        <item name="android:radioButtonStyle">@style/MainTextViewStyle</item>
        <item name="android:preferenceStyle">@style/MainTextViewStyle</item>
        <item name="android:dialogPreferenceStyle">@style/MainTextViewStyle</item>
        <item name="android:buttonStyle">@style/MainButtonStyle</item>
    </style>

    <style name="MainTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="MainButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:displayOptions">showTitle|showHome|homeAsUp</item>
        <item name="android:color">@color/white</item>
    </style>
</resources>