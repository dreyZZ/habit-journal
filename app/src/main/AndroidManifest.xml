<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tengri.habitjournal">

    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name="com.tengri.habitjournal.App"
        android:allowBackup="true"
        android:forceDarkAllowed="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HabitJournal">
        <activity
            android:name="com.tengri.habitjournal.activity.settings.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="com.tengri.habitjournal.activity.habit_detail.HabitDetailActivity"
            android:theme="@style/Theme.HabitJournal" />
        <activity
            android:name="com.tengri.habitjournal.activity.main.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.HabitJournal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>